generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["prismaSchemaFolder"]
}

datasource db {
  provider = "postgresql"
  url      = env("PRISMA_DB_URL")
}

model Users {
  uid               String             @id @default(cuid())
  username          String?            @unique
  name              String
  email             String             @unique
  dob               DateTime?
  email_verified_at DateTime?
  last_login        DateTime?
  profile_picture   String?
  deleted_at        DateTime?
  disabled_at       DateTime?
  created_at        DateTime?          @default(now())
  flags             Flags[]
  verificationToken VerificationToken? @relation("UserVerificationToken")

  @@map("tbl_users")
}

model VerificationToken {
  id        Int      @id @default(autoincrement())
  otp       Int
  uid       String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
  user      Users    @relation("UserVerificationToken", fields: [uid], references: [uid], onDelete: Cascade)

  @@map("tbl_verification_tokens")
}

model Flags {
  id         String   @id @default(cuid())
  user_id    String
  feature    String
  enabled    Boolean
  created_at DateTime @default(now())

  user Users @relation(fields: [user_id], references: [uid], onDelete: Cascade)

  @@unique([user_id, feature])
  @@map("tbl_flags")
}
